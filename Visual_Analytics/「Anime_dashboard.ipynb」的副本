(\n","        id='score-slider',\n","        min=0, max=10, step=0.1,\n","        value=7.0,\n","        marks={i: str(i) for i in range(0, 11)}\n","    ),\n","\n","    html.Br(),\n","    html.H3(\"🎥 符合條件的動畫列表\"),\n","    dash_table.DataTable(\n","        id='anime-table',\n","        columns=[\n","            {'name': '動畫名稱', 'id': 'Name'},\n","            {'name': '日文動畫名稱', 'id': 'Japanese name'},\n","            {'name': '年份', 'id': 'Premiered'},\n","            {'name': '評分', 'id': 'Score'},\n","            {'name': '類型', 'id': 'Genres'},\n","        ],\n","        style_table={'overflowX': 'auto'},\n","        style_cell={'textAlign': 'left'},\n","        page_size=10\n","    ),\n","    html.H3(\"📊 各年度與評分級距的動畫數量 (樞紐分析圖)\"),\n","    dcc.Graph(id='pivot-heatmap')\n","])\n","\n","@app.callback(\n","    Output('anime-table', 'data'),\n","    Output('pivot-heatmap', 'figure'),\n","    Input('year-slider', 'value'),\n","    Input('score-slider', 'value')\n",")\n","def update_table(year_range, scoring_threshold):\n","    filtered_df = df[\n","        (df['Premiered'] >= year_range[0]) &\n","        (df['Premiered'] <= year_range[1]) &\n","        (df['Score'] >= scoring_threshold)\n","    ][['Name', 'Premiered', 'Score', 'Genres', 'Japanese name', 'Score_bin']].sort_values(by='Score', ascending=True)\n","\n","    # 樞紐分析表\n","    pivot = pd.pivot_table(\n","        filtered_df,\n","        index='Score_bin',\n","        columns='Premiered',\n","        values='Name',\n","        aggfunc='count',\n","        fill_value=0\n","    )\n","\n","    fig = px.imshow(\n","        pivot,\n","        labels=dict(x=\"年份\", y=\"評分級距\", color=\"動畫數量\"),\n","        title=\"各年度中各星數動畫的總數量\",\n","        aspect=\"auto\",\n","        text_auto=True\n","    )\n","    fig.update_layout(height=600)\n","\n","    return filtered_df.to_dict('records'), fig\n","\n","# 啟動 App\n","if __name__ == '__main__':\n","    app.run(debug=True)"],"metadata":{"colab":{"base_uri":"https://localhost:8080/","